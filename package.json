{
  "name": "buildmyhouse-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BuildMyHouse - Complete home construction management platform",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev:homeowner": "pnpm --filter mobile-homeowner start",
    "dev:contractor": "pnpm --filter mobile-contractor start",
    "dev:backend": "pnpm --filter @buildmyhouse/backend start:dev",
    "dev:admin": "env -u npm_config_globalconfig -u NPM_GLOBALCONFIG pnpm --filter @buildmyhouse/admin-dashboard dev",
    "build:homeowner": "pnpm --filter mobile-homeowner build",
    "build:contractor": "pnpm --filter mobile-contractor build",
    "build:backend": "pnpm --filter @buildmyhouse/backend build",
    "build:admin": "pnpm --filter @buildmyhouse/admin-dashboard build",
    "build:all": "pnpm -r --parallel build",
    "test:all": "pnpm -r test",
    "lint:all": "pnpm -r lint",
    "clean": "pnpm -r exec rm -rf node_modules dist .next",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

